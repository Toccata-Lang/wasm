(defn createElementNS [ns tag]
  (inline C Opaque "
   int x = EM_ASM_INT({
             return sendValue(document.createElementNS(rcvString($0), rcvString($1)));},
           (int)ns_0, (int)tag_1);
   dec_and_free(ns_0, 1);
   dec_and_free(tag_1, 1);
   return((Value *)x);\n"))

(extend-type String
  DOM
  (create-node [s]
    (DOMNode (text-node s))))

(extend-type h/HTMLTag
  DOM
  (create-node [t]
    (let [node (DOMNode (createElement (.name t)))]
      ;; TODO: line counts are way off on this error message
      ;; (map (seq (.attributes t) (fn [[k v]]
      ;;                             (set-attribute node (str k) (str v)))))
      (map (seq (.attributes t)) (fn [[k v]]
                                   (set-attribute node (str k) (str v))))
      (set-attribute node "style" (-> (.styling t)
                                      (.styles)
                                      (reduce [] (fn [v styling]
                                                   (conj v (d/html styling))))
                                      (interpose "; ")
                                      d/html-str))
      (set-attribute node "class" (-> (.class t)
                                      (.classes)
                                      keys
                                      (interpose " ")
                                      d/html-str))
      (inner-html node (d/html-str (.contents t)))
      node)))

(extend-type s/SVGTag
  DOM
  (create-node [t]
    (let [node (DOMNode (createElementNS (.namespace t) (.name t)))]
      (map (seq (.attributes t)) (fn [[k v]]
                                   (set-attribute node (str k) (str v))))
      (set-attribute node "style" (-> (.styling t)
                                      (.styles)
                                      (reduce [] (fn [v styling]
                                                   (conj v (d/html styling))))
                                      (interpose "; ")
                                      d/html-str))
      (set-attribute node "class" (-> (.class t)
                                      (.classes)
                                      keys
                                      (interpose " ")
                                      d/html-str))
      (inner-html node (d/html-str (.contents t)))
      node)))
