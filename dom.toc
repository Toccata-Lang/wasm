(defprotocol DOM
  (create-nodes [x]
    (create-nodes (str x))))

(defn node= [n1 n2]
  (inline C Maybe "
#ifdef TOCCATA_WASM
   int x = EM_ASM_INT({
     return sendMaybe(objDeref($0) == objDeref($1));},
   extractDOMObject(n1_0), extractDOMObject(n2_1));
#else
Value *x = nothing;
#endif
   dec_and_free(n1_0, 1);
   dec_and_free(n2_1, 1);
   return((Value *)x);\n"))

(deftype DOMNode [x]
  (assert (instance? Opaque x))

  Stringable
  (string-list [_]
    (list "<DOMNode>"))

  wasm/JSInterOp
  (wasm/get-obj-field [_ field]
    (wasm/get-obj-field x field))
  (wasm/set-obj-field [_ field value]
    (wasm/set-obj-field x field value))

  Eq
  (=* [n1 n2]
    (node= n1 n2)))

(deftype ReadOnlyField [field-name map-fn]
  (assert (instance? wasm/FieldName field-name))

  Function
  (invoke [_ obj]
    (assert (instance? DOMNode obj))

    (map (wasm/get-obj-field obj field-name) map-fn))

  Container
  (map [_ f]
    (ReadOnlyField field-name f)))

(defn read-only-field [field-name]
  (ReadOnlyField field-name identity))

(deftype ReadWriteField [field-name]
  (assert (instance? wasm/FieldName field-name))

  Function
  (invoke [_ obj]
    (assert (instance? DOMNode obj))

    (wasm/get-obj-field obj field-name))

  (invoke [_ obj value]
    (assert (instance? DOMNode obj))

    (DOMNode (wasm/set-obj-field obj field-name value))))

(defn read-write-field [field-name]
  (ReadWriteField field-name))

(deftype XMLHttpRequest [x]
  (assert (instance? Opaque x))

  Stringable
  (string-list [_]
    (list "<XMLHttpRequest>")))

(def DOMObject (comp DOMNode
                     XMLHttpRequest))

