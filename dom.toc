(defprotocol DOM
  (create-node [x]))

(deftype DOMNode [x]
  (assert (instance? Opaque x))

  Stringable
  (string-list [_]
    (list "<DOMNode " (str x) ">")))

(inline C "
int extractDOMNode(Value *node) {
  return((int)((Opaque *)((Vector *)((ReifiedVal *)node)->typeArgs)->tail[0])->ptr);
}")

(defn inner-html
  ([node]
   (assert (instance? DOMNode node))

   (inline C String "
   int x = EM_ASM_INT({
     return sendString(objDeref($0).innerHTML);},
   extractDOMNode(node_0));
   dec_and_free(node_0, 1);
   return((Value *)x);\n"))
  ([node s]
   (assert (instance? DOMNode node))
   (assert (instance? String s))

   (inline C DOMNode "
   EM_ASM_({
     objDeref($0).innerHTML = rcvString($1);},
   extractDOMNode(node_0), (int)s_1);
   dec_and_free(s_1, 1);
   return(node_0);\n")))

