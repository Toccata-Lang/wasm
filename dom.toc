(defn node-get-elements-by-class [s]
  (inline C Vector "
#ifdef TOCCATA_WASM
   int x = EM_ASM_INT({
             let elements = document.getElementsByClassName(rcvString($0));
             let vect = _mallocVector();
             for (var i = 0; i < elements.length; i++) {
               _vectorConj(vect, sendValue(elements[i]));
             }
             return vect;}, (int)s_0);
#else
   Vector *x = empty_vect;
#endif
   dec_and_free(s_0, 1);
   return((Value *)x);\n"))

